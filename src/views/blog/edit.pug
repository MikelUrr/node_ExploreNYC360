extends ../layout

block content 
    h1.title Editar Entrada del Blog
    if error 
        h2= error
    form.formulario(action=`/blog/${entry._id}`, method="post", enctype='multipart/form-data')
        .form-group
            label(for="titulo") Título:
            input(type="text", name="titulo", id="titulo", value=entry.titulo)
        .form-group  
            label(for="contenido") Contenido:
            textarea(name="contenido", id="contenido")= entry.contenido
        .form-group
            label(for="categorias") Categorías Favoritas
                div
                    input(type="checkbox", name="categoria", value="atracciones", checked=entry.categoria.includes("atracciones")) 
                    | Atracciones Turísticas
                div
                    input(type="checkbox", name="categoria", value="barrios", checked=entry.categoria.includes("barrios")) 
                    | Barrios de Nueva York
                div
                    input(type="checkbox", name="categoria", value="gastronomia", checked=entry.categoria.includes("gastronomia")) 
                    | Gastronomía Local
                div
                    input(type="checkbox", name="categoria", value="eventos",checked=entry.categoria.includes("eventos")) 
                    | Eventos Especiales      
        .form-group
            label(for="categoriaMes") Estación Preferida
            select(name="categoriaMes", id="categoriaMes", class="input-field")
                option(value="invierno", selected=entry.categoriaMes === "invierno") Invierno
                option(value="primavera", selected=entry.categoriaMes === "primavera") Primavera
                option(value="verano", selected=entry.categoriaMes === "verano") Verano
                option(value="otonio", selected=entry.categoriaMes === "otonio") Otoño
        .form-group
            label(for="fotoSubir") Foto:
            input(type="file", name="fotoSubir", id="fotoSubir", class="input-field")
            img(id="blogPhoto", src=entry.foto, alt="Foto de la entrada del blog")
        .form-group
            label(for="autor") Autor:
            input(type="text", name="autor", id="autor", value=entry.autor)
        .form-group
            input(type="submit", value="Guardar") 
            button
                a(href='/blog') Cancelar
